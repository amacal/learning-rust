{
	"name": "Rust",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"containerEnv": {
		"CARGO_TARGET_DIR": "/tmp/cargo"
	},
	"customizations": {
		"vscode": {
			"extensions": [
                "rust-lang.rust-analyzer"
			],
			"settings": {
				"files.trimTrailingWhitespace": true,
				"files.trimFinalNewlines": true,
				"files.insertFinalNewline": true
			}
		}
	}
}
